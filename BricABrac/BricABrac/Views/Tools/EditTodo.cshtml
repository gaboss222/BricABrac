@model BricABrac.Models.TodoModel

@{
    ViewData["Title"] = "EditTodo";
}

<h2>EditTodo</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTodo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Todo" class="control-label"></label>
                <textarea class="form-control" asp-for="Todo"></textarea>
                <span asp-validation-for="Todo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
        <form asp-action="DeleteTodo">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Todo">Back to todos</a>
</div>

