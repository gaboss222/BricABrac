@model IEnumerable<BricABrac.Models.TodoModel>
@{
    ViewData["Title"] = "Todo";
}

<a class="btn btn-primary nav-link text-white" asp-area="" asp-controller="Tools" asp-action="CreateTodo">Add a todo</a>

@foreach (var item in Model)
{
    @Html.ActionLink("", "EditTodo", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" })
    <div>

        @Html.DisplayTextFor(modelItem => item.Todo)

    </div>

}

