@model BricABrac.Models.TodoModel

@{
    ViewData["Title"] = "CreateTodo";
}

<h2>CreateTodo</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTodo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Todo" class="control-label"></label>
                <textarea class="form-control" asp-for="Todo">Enter text here...</textarea>
                <span asp-validation-for="Todo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Todo">Back to todos</a>
</div>

