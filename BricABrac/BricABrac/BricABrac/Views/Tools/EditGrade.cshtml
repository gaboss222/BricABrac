@model BricABrac.Models.GradeSubjectViewModel

<h2>Edit a grade</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGrade">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Grade.Id" />
            <div class="form-group">
                <label asp-for="Grade.Grade" class="control-label"></label>
                <input asp-for="Grade.Grade" class="form-control" type="number" min="0" required step="0.01"/>
                <span asp-validation-for="Grade.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade.Coefficient" class="control-label"></label>
                <input asp-for="Grade.Coefficient" class="form-control" type="number" min="0" required step="0.01"/>
                <span asp-validation-for="Grade.Coefficient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Grade.IsExam" type="checkbox" />
                <label asp-for="Grade.IsExam" class="control-label">Is a exam ?</label>
            </div>
            <div class="form-group">
                <label class="control-label">Subject name</label>
                <select asp-for="Grade.Subject.Id" asp-items="@(new SelectList(Model.SubjectList, "Id", "Name",  Model.SubjectList.Select(x=> x.Id).FirstOrDefault()))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
        <form asp-action="DeleteGrade">
            <input type="hidden" asp-for="Grade.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Grade">Back to grades</a>
</div>

