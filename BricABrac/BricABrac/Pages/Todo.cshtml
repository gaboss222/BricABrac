@page
@using Pages
@model TodoModel

<!DOCTYPE html>
<html lang="en">
<head>

<title>TODO file saver</title>

</head>
<body>

    <h2>Separate page model</h2>
    <p>
        @Model.Message
    </p>

    <!-- Text Section -->
    <section id="text-demo">
        <h2>Saving text</h2>
        <textarea class="input" id="textAreaTodo" placeholder="Enter text here"></textarea>
        <form id="text-options" method="post" onsubmit="return onTextSaveFile()";>
            <label>Filename: <input type="text" class="filename" id="text-filename" placeholder="a text document"/>.txt</label>
            <input type="submit" value="Save"/>
        </form>
    </section>


    <!-- Back top -->
    <a href="#back-top" class="go-top"><i class="fa fa-angle-up"></i></a>

</body>
</html>
<!-- SCRIPTS -->

<script src="js/jquery.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/file-saver.js"></script>

